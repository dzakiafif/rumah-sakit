{% extends 'subLayout.html.twig' %}

{% block title %}Input Drm{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Input Data DRM</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="tgl_mrs" id="" class="datepicker form-control">
                                    <label class="form-label">Tanggal MRS</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="tgl_krs" id="" class="datepicker form-control">
                                    <label class="form-label">Tanggal KRS</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="tgl_setor" id="" class="datepicker form-control">
                                    <label class="form-label">Tanggal Setor</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="catatan_jam" id="" class="timepicker form-control">
                                    <label class="form-label">Jam</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Diagnosa</p>
                                <select name="" id="" class="select2 form-control">
                                    <option value="">-- Pilih Diagnosa --</option>
                                    <option value="1">Sakit Kepala</option>
                                    <option value="2">Tifus</option>
                                    <option value="3">Panas</option>
                                </select>
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>

        $('.datepicker').bootstrapMaterialDatePicker({
           weekStart: 0,
           time: false
        });

        $('.timepicker').bootstrapMaterialDatePicker({
           date: false
        });

        $('.select2').select2({});
    </script>
{% endblock %}