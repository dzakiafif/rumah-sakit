{% extends 'subLayout.html.twig' %}

{% block title %}Input Drm{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Input Data DRM</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                            <div class="form-group">
                                <select name="pasien" id="" class="select2 form-control">
                                    <option value="">-- Pilih kode RM Pasien</option>
                                    {% for item in pasien %}
                                        <option value="{{ item.id }}">{{ item.kodeRm }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="tgl_mrs" id="" class="datepicker form-control" value="{% if drm.tglMrs is defined and not null %}{{ drm.tglMrs|date('d m Y') }}{% endif %}">
                                    <label class="form-label">Tanggal MRS</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="tgl_krs" id="" class="datepicker form-control" {% if drm.tglKrs is defined and not null %}{{ drm.tglKrs|date('d m Y') }}{% endif %}>
                                    <label class="form-label">Tanggal KRS</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="tgl_setor" id="" class="datepicker form-control" {% if drm.tglSetor is defined and not null %}{{ drm.tglSetor|date('d m Y') }}{% endif %}>
                                    <label class="form-label">Tanggal Setor</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <select name="catatan_jam" class="form-control" id="">
                                    <option value="">-- Pilih Jam --</option>
                                    <option value="1" {% if drm.catatanJam is defined and not null %}{% if drm.catatanJam == 1 %}selected{% endif %}{% endif %}> < 48 Jam</option>
                                    <option value="2"> {% if drm.catatanJam is defined and not null %}{% if drm.catatanJam == 2 %}selected{% endif %}{% endif %}> 48 jam </option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Kondisi Pulang</p>
                                <select name="kondisi_pulang" id="" class="form-control">
                                    <option value="">-- Pilih Kondisi Pulang --</option>
                                    <option value="1" {% if drm.kondisiPulang is defined and not null %}{% if drm.kondisiPulang == 1 %}selected{% endif %}{% endif %}>Sembuh</option>
                                    <option value="2" {% if drm.kondisiPulang is defined and not null %}{% if drm.kondisiPulang == 2 %}selected{% endif %}{% endif %}>PAPS</option>
                                    <option value="3" {% if drm.kondisiPulang is defined and not null %}{% if drm.kondisiPulang == 3 %}selected{% endif %}{% endif %}>Rujuk</option>
                                    <option value="4" {% if drm.kondisiPulang is defined and not null %}{% if drm.kondisiPulang == 4 %}selected{% endif %}{% endif %}>Lari</option>
                                    <option value="5" {% if drm.kondisiPulang is defined and not null %}{% if drm.kondisiPulang == 5 %}selected{% endif %}{% endif %}>Meninggal Dunia</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" name="rujukan" id="" class="form-control" value="{% if drm.rujukan is defined and not null %}{{ drm.rujukan }}{% endif %}">
                                    <label class="form-label">Rujukan</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Penjamin</p>
                                <select name="penjamin" id="" class="form-control">
                                    <option value="">-- Pilih Penjamin --</option>
                                    {% for item in penjamin %}
                                        <option value="{{ item.id }}">{{ item.namaPenjamin }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <p>DPJP</p>
                                <select name="dokter" id="" class="form-control">
                                    <option value="">-- Pilih Dokter --</option>
                                    {% for item in dokter %}
                                        <option value="{{ item.id }}">{{ item.namaDokter }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Diagnosa</p>
                                <select name="diagnosa" id="" class="select2 form-control">
                                    <option value="">-- Pilih Diagnosa --</option>
                                    {% for item in diagnosa %}
                                        <option value="{{ item.id }}">{{ item.namaDiagnosa }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Ruangan</p>
                                <select name="ruangan" id="" class="form-control">
                                    <option value="">-- Pilih Ruangan --</option>
                                    {% for item in ruangan %}
                                        <option value="{{ item.id }}">{{ item.namaRuangan }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Operasi</p>
                                <select name="operasi" id="" class="form-control">
                                    <option value="">-- Pilih Operasi --</option>
                                    <option value="1" {% if drm.operasi is defined and not null %}{% if drm.operasi == 1 %}selected{% endif %}{% endif %}>Ya</option>
                                    <option value="2" {% if drm.operasi is defined and not null %}{% if drm.operasi == 2 %}selected{% endif %}{% endif %}>Tidak</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Jenis Berkas</p>
                                <select name="jenis_berkas" id="" class="form-control">
                                    <option value="">-- Pilih Jenis Berkas --</option>
                                    <option value="1" {% if drm.jenisBerkas is defined and not null %}{% if drm.jenisBerkas == 1 %}selected{% endif %}{% endif %}>Lengkap</option>
                                    <option value="2" {% if drm.jenisBerkas is defined and not null %}{% if drm.jenisBerkas == 2 %}selected{% endif %}{% endif %}>Tidak Lengkap</option>
                                    <option value="3" {% if drm.jenisBerkas is defined and not null %}{% if drm.jenisBerkas == 3 %}selected{% endif %}{% endif %}>Peminjaman</option>
                                </select>
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            weekStart: 0,
            time: false
        });

        $('.timepicker').bootstrapMaterialDatePicker({
            date: false
        });

        $('.select2').select2({});
    </script>
{% endblock %}