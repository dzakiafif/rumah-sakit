{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Perbarui Data Pasien</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="kode_rm" id="" class="form-control" value="{% if data.kodeRm is not null %}{{ data.kodeRm }}{% endif %}">
                                <label class="form-label">Kode RM</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="nama_pasien" id="" class="form-control" value="{% if data.namaPasien is not null %}{{ data.namaPasien }}{% endif %}">
                                <label class="form-label">Nama Pasien</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="tgl_lahir" id="" class="datetimepicker form-control" value="{% if data.tglLahir is not null %}{{ data.tglLahir|date('d m Y') }}{% endif %}">
                                <label class="form-label">Tanggal Lahir</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" name="alamat_pasien" id="" class="form-control" value="{% if data.alamatPasien is not null %}{{ data.alamatPasien }}{% endif %}">
                                <label class="form-label">Alamat Pasien</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <select name="jenis_kelamin" id="" class="form-control show-tick">
                                <option value="">-- Pilih Jenis Kelamin --</option>
                                <option value="1" {% if data.jenisKelamin == 1 %}selected{% endif %}>Laki-Laki</option>
                                <option value="2" {% if data.jenisKelamin == 2 %}selected{% endif %}>Perempuan</option>
                            </select>
                        </div>
                        <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}