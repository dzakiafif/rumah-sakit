{% extends 'subLayout.html.twig' %}

{% block title %}Input Pasien{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2><center>Input Data Pasien</center></h2>
                    </div>
                    <div class="body">
                        <form id="form_validation" method="POST">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" name="kode_rm" id="" class="form-control">
                                    <label class="form-label">Kode RM</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" name="nama_pasien" id="" class="form-control">
                                    <label class="form-label">Nama Pasien</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" name="tgl_lahir" id="" class="datetimepicker form-control">
                                    <label class="form-label">Tanggal Lahir</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" name="alamat_pasien" id="" class="form-control">
                                    <label class="form-label">Alamat Pasien</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" name="tgl_daftar" id="" class="datetimepicker form-control">
                                    <label class="form-label">Tanggal Daftar</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" name="jam_daftar" id="" class="timepicker form-control">
                                    <label class="form-label">Jam Daftar</label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <select name="jenis_kelamin" id="" class="form-control show-tick">
                                    <option value="">-- Pilih Jenis Kelamin --</option>
                                    <option value="1">Laki-Laki</option>
                                    <option value="2">Perempuan</option>
                                </select>
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datetimepicker').bootstrapMaterialDatePicker({
            weekStart: 0,
            time: false
        });

        $('.timepicker').bootstrapMaterialDatePicker({
            date: false
        });
    </script>
{% endblock %}