{% extends 'subLayout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Data Peminjaman</center>
                        </h2>
                    </div>
                    <div class="body">
                        <form method="post">
                            <div class="form-group">
                                <p>Nama Peminjam</p>
                                <div class="form-line">
                                    <input type="text" name="nama_peminjam" class="form-control" value="{% if peminjam.namaPeminjam is defined and not null %}{{ peminjam.namaPeminjam }}{% endif %}">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Nama Petugas</p>
                                <div class="form-line">
                                    <input type="text" name="petugas" class="form-control" value="{% if peminjam.petugasRekamMedis is defined and not null %}{{ peminjam.petugasRekamMedis }}{% endif %}">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Nama Pengembalian</p>
                                <div class="form-line">
                                    <input type="text" name="nama_pengembalian" class="form-control" value="{% if peminjam.namaPengembalian is defined and not null %}{{ peminjam.namaPengembalian }}{% endif %}">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Tanggal Peminjaman</p>
                                <div class="form-line">
                                    <input type="text" name="tgl_peminjam" class="datepicker form-control" value="{% if peminjam.tglPeminjaman is defined and not null %}{{ peminjam.tglPeminjaman|date('d m Y') }}{% endif %}">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Tanggal Kembali</p>
                                <div class="form-line">
                                    <input type="text" name="tgl_pengembalian" class="datepicker form-control" value="{% if peminjam.tglKembali is defined and not null %}{{ peminjam.tglKembali|date('d m Y') }}{% endif %}">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Unit Peminjam</p>
                                <div class="form-line">
                                    <input type="text" name="unit_peminjam" class="form-control" value="{% if peminjam.unitPeminjam is defined and not null %}{{ peminjam.unitPeminjam }}{% endif %}">
                                </div>
                            </div>
                            <div class="form-group">
                                <p>Unit Pengembalian</p>
                                <div class="form-line">
                                    <input type="text" name="unit_pengembalian" class="form-control" value="{% if peminjam.unitPengembalian is defined and not null %}{{ peminjam.unitPengembalian }}{% endif %}">
                                </div>
                            </div>
                            <button class="btn btn-primary waves-effect">SUBMIT</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.datepicker').bootstrapMaterialDatePicker({
            time: false
        });
    </script>
{% endblock %}