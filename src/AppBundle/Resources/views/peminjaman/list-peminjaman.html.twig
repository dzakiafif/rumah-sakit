{% extends 'subLayout.html.twig' %}

{% block title %}PEMINJAMAN{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <center>Daftar Semua Peminjaman</center>
                        </h2>
                    </div>
                    <div class="body">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Kode RM</th>
                                    <th>Nama Pasien</th>
                                    <th>Tanggal KRS</th>
                                    <th>Ruangan</th>
                                    <th>DPJP</th>
                                    <th>Penjamin</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if data|length > 0 %}
                            {% set i = 1 %}
                                {% for dat in data %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{% if dat.pasien is not null %}{{ dat.pasien.kodeRm }}{% endif %}</td>
                                        <td>{% if dat.pasien is not null %}{{ dat.pasien.namaPasien }}{% endif %}</td>
                                        <td>{% if dat.tglKrs is not null %}{{ dat.tglKrs|date('d m Y') }}{% endif %}</td>
                                        <td>{% if dat.ruangan is not null %}{{ dat.ruangan.namaRuangan }}{% endif %}</td>
                                        <td>{% if dat.dokter is not null %}{{ dat.dokter.namaDokter }}{% endif %}</td>
                                        <td>{% if dat.penjamin is not null %}{{ dat.penjamin.namaPenjamin }}{% endif %}</td>
                                        <td>
                                            <a href="{{ path('app_admin_update_peminjaman',{id: dat.id}) }}" class="btn btn-primary btn-xs">UPDATE</a>
                                            <a href="{{ path('app_admin_detail_peminjaman',{id: dat.id}) }}" class="btn btn-success btn-xs">DETAIL</a>
                                        </td>
                                    </tr>
                                    {% set i = i + 1 %}
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="8"><center>Tidak ada data</center></td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block customJS %}
    <script>
        $('.dataTable').dataTable({

        });
    </script>
{% endblock %}